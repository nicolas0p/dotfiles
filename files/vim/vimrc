set sts=4
set ts=4
set sw=4
set expandtab
set autoindent

set lbr
set tw=500

set si "Smart indent
set wrap "Wrap lines

set mouse=a
set cino+=(0

set incsearch
set ignorecase
set smartcase

map q :q<enter>

nmap <silent> ,i gg=G:retab<CR>''

highligh ExtraWhitespace ctermbg=red
highligh OverLength ctermbg=DarkMagenta ctermfg=white

au BufWinEnter * let w:m1=matchadd('ExtraWhitespace', '\s\+$', -1)

au BufWinEnter * let w:m2=matchadd('OverLength', '\%81v.\+', -1)


syntax on


" vundle setup
filetype off

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'gmarik/Vundle.vim'
Plugin 'Syntastic'
Plugin 'bling/vim-airline'
Plugin 'tpope/vim-fugitive'

Plugin 'davidhalter/jedi-vim'

call vundle#end()

filetype plugin indent on
